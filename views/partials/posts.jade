- if (!everyauth.loggedIn)
  h2 Not Authenticated
   #google-login
    a(href='/auth/google', style='border: 0px')
      img(style='border: 0px', src='https://www.google.com/favicon.ico')
- else
  h2 Authenticated
  - if (everyauth.google)
    h3 Google User Data
    p= JSON.stringify(everyauth.google.user)
  h3
    a(href='/logout') Logout

    -each blogPost in posts
        article
            header
                #{blogPost.title}
            #content
                #{blogPost.content}
  #blog
      p Title
        br
        input(id='title')
      p Content
        br
        input(id='contentField')
      p
        button(id='btnSave')
            label Save

